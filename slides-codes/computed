<div id="app">
  <input
    type="text"
    v-model="newTodo"
    @keyup.enter="addTodo"
  />
  <p>{{ numberOfTodos }}</p>  <!-- Computed -->
  <ul>
    <li v-for="todo in todos">
      {{ todo }}
      <span @click="removeTodo($index)"> x </span>
    </li>
  </ul>
</div>

new Vue({
  el: '#app',
  data: {
    todos: [],
    newTodo: ''
  },
  methods: {
    removeTodo: function (index) { /* ... */ },
    addTodo: function () { /* ... */ }
  },
  computed: {  // <--- Computed properties
    numberOfTodos: function () {
      return this.todos.length;
    }
  }
})